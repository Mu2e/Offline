# Run CrvDigisFromFragments module to convert artdaq::Fragment collections
# into CRV collections.
# Usage: mu2e -c DAQ/test/CrvDigisFromFragmentsTest.fcl -s <input root files> -n '-1'
#
#
# Contact person G. Pezzullo, R. Ehrlich

#include "mu2e_trig_config/core/trigProducers.fcl"
#include "Offline/fcl/standardServices.fcl"

process_name : FragmentToDigi

services :
{
  @table::Services.Core
}

source :
{
  module_type : RootInput
  fileNames   : @nil
  maxEvents   : -1
}

physics :
{
  producers :
  {
    genFrags :
    {
       module_type  : ArtFragmentsFromDTCEvents
       diagLevel    : 10
       makeCaloFrag : 0
       makeTrkFrag  : 0
       makeCRVFrag  : 1
       makeSTMFrag  : 0

    }
    CrvDigi :
    {
      module_type : CrvDigisFromFragments
      crvTag      : "genFrags"
      diagLevel   : 10
    }
  }

  t1 : [ genFrags, CrvDigi]
  e1 : [ outfile ]

  trigger_paths  : [t1]
  end_paths      : [e1]

}

outputs:
{
  outfile :
  {
    module_type   :   RootOutput
    fileName      :   "crvDigis.art"
    outputCommands : [ "keep *_*_*_*",
                       "drop mu2e::CRVDataDecoders_*_*_*" ] #dictionary doesn't exist
  }
}

services.GeometryService.inputFile: "Offline/Mu2eG4/geom/geom_Wideband1module.txt"
