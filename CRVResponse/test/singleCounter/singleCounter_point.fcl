BEGIN_PROLOG

       Mu2eG4CommonCut:
       {
         type: union
         pars:
         [
            {
              type  : plane
              normal: [  0, -1, 0 ]
              point : [ 0, 2653.31, 0 ]
            },
            {
              type: inVolume
              pars: [ worldDirtBottom, worldDirtNW, worldDirtSW, worldDirtSE, worldDirtNE ]
