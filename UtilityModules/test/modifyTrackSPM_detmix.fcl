    dioMixer      : {
      module_type : ModifyTrackSPM
      productTag  : "dioMixer:tracker"
    }
    protonMixer   : {
      module_type : ModifyTrackSPM
      productTag  : "protonMixer:tracker"
    }
  }

 t1 : [ deuteronMixer, ootMixer, flashMixer, photonMixer, neutronMixer, dioMixer, protonMixer ]
