}

services : {
  message : @local::default_message
}

physics : {

  producers : {
    deuteronMixer : {
      module_type : ModifyTrackSPM
      productTag  : "deuteronMixer:tracker"
    }
    ootMixer      : {
      module_type : ModifyTrackSPM
      productTag  : "ootMixer:tracker"
    }
    flashMixer    : {
