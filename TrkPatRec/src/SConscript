#!/usr/bin/env python
#
# Script to build the files found in this directory.
#
# Original author Rob Kutschke.
#

import os
Import('env')
Import('mu2e_helper')

extrarootlibs = [ 'TMVA', 'Minuit', 'XMLIO']

rootlibs = env['ROOTLIBS']

helper = mu2e_helper(env)

mainlib = helper.make_mainlib([
  'mu2e_TrkReco',
  'mu2e_ConditionsService',
  'mu2e_TrackerConditions',
  'mu2e_GeometryService',
  'mu2e_BFieldGeom',
  'mu2e_CalorimeterGeom',
  'mu2e_TrackerGeom',
  'mu2e_MCDataProducts',
  'mu2e_RecoDataProducts',
  'mu2e_DataProducts',
  'mu2e_GeneralUtilities',
  #                                  'mu2e_CalPatRec',
  'art_Framework_Core',
  'art_Framework_Principal',
  'art_Framework_Services_Registry',
  'art_root_io_TFileService',
  'art_root_io_tfile_support',
  'art_Persistency_Provenance',
  'art_Persistency_Common',
  'art_Utilities',
  'canvas',
  'fhiclcpp',
  'fhiclcpp_types',
  'tbb',
  'cetlib',
  'cetlib_except',
  rootlibs,
  'CLHEP',
  ])

helper.make_plugins([mainlib,
  'mu2e_Mu2eUtilities',
  'mu2e_TrkReco',
  'mu2e_ConditionsService',
  'mu2e_TrackerConditions',
  'mu2e_GeometryService',
  'mu2e_BFieldGeom',
  'mu2e_CalorimeterGeom',
  'mu2e_TrackerGeom',
  'mu2e_MCDataProducts',
  'mu2e_DbTables',
  'mu2e_RecoDataProducts',
  'mu2e_ConfigTools',
  'mu2e_DataProducts',
  'mu2e_GeneralUtilities',
  'mu2e_GeomPrimitives',

  # 'mu2e_CalPatRec',
  'art_Framework_Core',
  'art_Framework_Principal',
  'art_Framework_Services_Registry',
  'art_root_io_tfile_support',
  'art_root_io_TFileService',
  'art_Framework_Services_Optional_RandomNumberGenerator',
  'art_Persistency_Common',
  'art_Persistency_Provenance',
  'art_Utilities',
  'canvas',
  'MF_MessageLogger',
  'fhiclcpp',
  'fhiclcpp_types',
  'tbb',
  'cetlib',
  'cetlib_except',
  'KinKal_Trajectory',
  'KinKal_Geometry',
  'KinKal_General',
  'CLHEP',
  rootlibs,
  extrarootlibs,
  'xerces-c',
  'boost_filesystem',
  'pthread'
  ])


