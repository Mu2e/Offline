# -*- mode: tcl -*-
#------------------------------------------------------------------------------
#------------------------------------------------------------------------------
#include "Offline/CaloReco/fcl/common.fcl"


BEGIN_PROLOG

CaloClusterFast:
{
   module_type            : CaloClusterFast
   caloHitCollection      : "CaloHitMakerFast:calo"
   EminSeed               : 10
   ExpandCut              : 1.0
   EnoiseCut              : 1.0
   deltaTime              : 10
   minSiPMPerHit          : 2
   extendSearch           : true
   timeOffset             : -61 #ns
   diagLevel              : 0
}

CaloTrigger : {
    module_type           : CaloTrigger
    caloDigiModuleLabel   : CaloDigiMaker
    digiSampling          : @local::HitMakerDigiSampling
    blindTime             : @local::HitMakerDigitizationStart
    endTimeBuffer         : 80
    windowPeak            : 2
    minAmplitude          : 20
    extendSecond          : false
    minSeedAmplitude      : 433
    minEnergy             : 50
    timeCorrection        : 20.0
    adcToEnergy           : 0.0461333
    diagLevel             : 0
}


CaloClusterTrigger:
{
   producers : {
      CaloClusterFast : @local::CaloClusterFast
      CaloTrigger     : @local::CaloTrigger
   }

   Reco : [ CaloClusterFast ]
}


END_PROLOG
