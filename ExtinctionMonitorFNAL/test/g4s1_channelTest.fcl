// Track a test particle trhough ExtMonFNAL channel
//
// Andrei Gaponenko, 2011

#include "Offline/fcl/minimalMessageService.fcl"
#include "Offline/fcl/standardProducers.fcl"
#include "Offline/fcl/standardServices.fcl"

// Give this job a name.
process_name : channelTest

source : {
    module_type : EmptyEvent
    maxEvents : 10
}

services : {
    message : @local::default_message

    scheduler: { defaultExceptions : false }
    TFileService : { fileName : "g4hists_channelTest.root" }
    RandomNumberGenerator : {defaultEngineKind: "MixMaxRng"}

    GeometryService : { inputFile : "Offline/ExtinctionMonitorFNAL/test/geom_channelTest.txt" }
    GlobalConstantsService : { inputFile : "Offline/GlobalConstantsService/data/globalConstants_01.txt" }
    SeedService       : @local::automaticSeeds
    Mu2eG4Helper : { }
}

physics : {
    producers : {
        generate : {
            module_type   : EventGenerator
            inputfile     : "Offline/ExtinctionMonitorFNAL/test/genconfig_channelTest.txt"
        }

        g4run : {
            module_type          : G4
            generatorModuleLabel : generate
        }
    }

    analyzers: {
        vdprint: {
            module_type: StepPointsPrinter
            inputCollection  : "g4run:virtualdetector"
        }
    }

    tprint : [ generate, g4run ]
    eprint: [ vdprint ]

    trigger_paths  : [tprint]
    end_paths : [ eprint ]
}

//----------------------------------------------------------------
physics.producers.g4run.visualization.initMacro: "Offline/ExtinctionMonitorFNAL/test/vis_extMonFNAL_channelTest.mac"

services.SeedService.baseSeed         :  8
services.SeedService.maxUniqueEngines :  20

