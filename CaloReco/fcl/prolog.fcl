# -*- mode: tcl -*-
#------------------------------------------------------------------------------
# this file is included by fcl/standardProducers.fcl inside the PROLOG section
#------------------------------------------------------------------------------

BEGIN_PROLOG

RawProcessor : 
{
    windowPeak       : 3
    minPeakAmplitude : 5
    shiftTime        : 57.5
    scaleFactor      : 0.0625
    diagLevel        : 0
}

TemplateProcessor : 
{
    windowPeak         : 3
    minPeakAmplitude   : 16
    pulseLowBuffer     : 10
    pulseHighBuffer    : 20 
    minDeltaPeakBin    : 3
    refitLeadingEdge   : false
    timeCorr           : 0    
    digiSampling       : @local::HitMakerDigiSampling
    pulseIntegralSteps : 100
    fitPrintLevel      : -1
    fitStrategy        : 1
    diagLevel          : 3
}


CaloRecoDigiFromDigi :
{ 
    module_type         : CaloRecoDigiFromDigi
    caloDigiModuleLabel : CaloDigiFromShower
    RawProcessor        : { @table::RawProcessor }
    TemplateProcessor   : { @table::TemplateProcessor }
    processorStrategy   : "TemplateFit"     
    digiSampling        : @local::HitMakerDigiSampling
    maxChi2Cut          : 10
    maxPlots            : 100
    diagLevel           : 3
}


CaloCrystalHitFromHit:
{
    module_type          : CaloCrystalHitFromHit
    caloDigisModuleLabel : CaloRecoDigiFromDigi	    	    
    time4Merge           : 4.0   #ns
    diagLevel            : 3
}



CaloReco : 
{
   producers : {
     CaloRecoDigiFromDigi    : @local::CaloRecoDigiFromDigi
     CaloCrystalHitFromHit  : @local::CaloCrystalHitFromHit
   }
   Reco : [ CaloRecoDigiFromDigi ,CaloCrystalHitFromHit ]
}

END_PROLOG
