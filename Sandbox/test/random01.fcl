# Run the random number generator test and save the state to the output file
#

#include "fcl/minimalMessageService.fcl"
#include "fcl/standardServices.fcl"

process_name : random01

source : {
  module_type : EmptyEvent
  maxEvents   : 10
}

services : {
  message               : @local::default_message
  RandomNumberGenerator : {defaultEngineKind: "MixMaxRng"}

  SeedService : @local::automaticSeeds

}

physics : {

  analyzers : {
     foo : { module_type : Random01 }
     bar : { module_type : Random01 }
  }

  producers : { randomsaver : { module_type : RandomNumberSaver } }

  t1 : [ randomsaver ]
  e1 : [ foo, bar, outfile ]

  trigger_paths : [ t1 ]
  end_paths     : [ e1 ]

}

outputs: {

  outfile : {
    module_type : RootOutput
    fileName    : "random01_data.root"
  }

}

services.SeedService.baseSeed         :  8
services.SeedService.maxUniqueEngines :  20
